{
  "manifest_version": 3,
  "name": "WebToEpub",
  "version": "1.0.3.2",
  "default_locale": "en",
  "icons": {
    "128": "book128.png"
  },
  "permissions": [
    "cookies",
    "downloads",
    "webRequest",
    "webRequestBlocking",
    "scripting",
    "storage",
    "unlimitedStorage"
  ],
  "host_permissions": [
    "<all_urls>"
  ],
  "action": {
    "browser_style": false,
    "default_title": "",
    "default_icon": "book128.png",
    "default_popup": "popup.html"
  },
  "incognito": "split",
  "browser_specific_settings": {
    "gecko": {
      "id": "WebToEpub@Baka-tsuki.org",
      "strict_min_version": "115.0"
    }
  },
  "minimum_chrome_version": "120"
}
